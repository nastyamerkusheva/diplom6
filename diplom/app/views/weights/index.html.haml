%table.table-striped.table-hover.table-style
  %caption.new-obj
    = link_to new_weight_path, class: 'btn btn-primary' do
      = fa_icon :plus
      = t('headers.weights.new')
  %thead.table-head
    %tr
      %th= Weight.human_attribute_name(:name)
      %th= Weight.human_attribute_name(:part_of_characteristic)
      %th= Weight.human_attribute_name(:weight_val)
      %th


  %tbody
    - @weights.each do |weight|
      %tr
        %td{:data => {:label => Weight.human_attribute_name(:name)}}
          =  weight.name
        %td{:data => {:label => Weight.human_attribute_name(:part_of_characteristic)}}
          = weight.part_of_characteristic.part_name
        %td{:data => {:label => Weight.human_attribute_name(:weight_val)}}
          =  weight.weight_val
        -# %td= weight.default
        %td.right
          = link_to weight, class: 'btn btn-warning' do
            = fa_icon :eye
            = t('buttons.show')
          = link_to edit_weight_path(weight), class: 'btn btn-info' do
            = fa_icon :edit
            = t('buttons.edit')
          = link_to  weight, :method => :delete,
          :data => { :confirm => t('buttons.confirm.weights') },
          class: 'btn btn-danger' do
            = fa_icon :times
            = t('buttons.destroy')
