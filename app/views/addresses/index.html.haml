%table.table-striped.table-hover.table-style
  %caption.new-obj
    = link_to new_address_path, class: 'btn btn-primary' do
      = fa_icon :plus
      = t('buttons.new.addresses')
  %thead.table-head
    %tr
      %th= Address.human_attribute_name(:name)
      %th

  %tbody
    - @addresses.each do |address|
      %tr
        %td{:data => {:label => Address.human_attribute_name(:name)}}
          = address.name
        %td.right
          = link_to address, class: 'btn btn-warning' do
            = fa_icon :eye
            = t('buttons.show')
          = link_to edit_address_path(address), class: 'btn btn-info' do
            = fa_icon :edit
            = t('buttons.edit')
          = link_to  address, :method => :delete,
          :data => { :confirm => t('buttons.confirm.addresses') },
          class: 'btn btn-danger' do
            = fa_icon :times
            = t('buttons.destroy')
